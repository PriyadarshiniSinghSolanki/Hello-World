}

void strcopy(char arr_str1[], char arr_str2[]) {
	int i = 0;
	while (arr_str2[i] != '\0') {
		arr_str1[i] = arr_str2[i];
		i++;
	}
	arr_str1[i] = '\0';
}

int Strcompare(char *ptr_str1, char *ptr_str2) {
	int result;
	printf("ptr4str: %s", ptr_str1);
	printf("ptr4str: %s", *ptr_str1);
	if ((*ptr_str1 != '\0') && (*ptr_str2 != '\0')) {
		while (ptr_str1 == ptr_str2) {
			ptr_str1++;
			ptr_str2++;
			result = 0;
		}
		//result = 0;
	}
	else
		result = 1;

	return result;
}
